{
  "manifest_version": 3,
  "name": "Threefold Profile Manager",
  "version": "1.0.0",
  "icons": {
    "16": "profile.png",
    "48": "profile.png",
    "128": "profile.png",
    "256": "profile.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "profile.png",
      "48": "profile.png",
      "128": "profile.png",
      "256": "profile.png"
    }
  },
  "permissions": ["tabs", "storage", "declarativeContent", "activeTab"],
  "content_scripts": [
    {
      "matches": [
        "https://play.grid.tf/*",
        "https://play.test.grid.tf/*",
        "https://play.qa.grid.tf/*",
        "https://play.dev.grid.tf/*",
        "https://dashboard.grid.tf/*",
        "https://dashboard.test.grid.tf/*",
        "https://dashboard.qa.grid.tf/*",
        "https://dashboard.dev.grid.tf/*",
        "http://localhost:8080/*",
        "http://localhost:8081/*",
        "http://localhost:8082/*",
        "http://localhost:3000/*",
        "http://localhost:3001/*"
      ],
      "js": ["inject.js", "$$cmds.js", "bus.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["store.js"],
      "matches": [
        "https://play.grid.tf/*",
        "https://play.test.grid.tf/*",
        "https://play.qa.grid.tf/*",
        "https://play.dev.grid.tf/*",
        "https://dashboard.grid.tf/*",
        "https://dashboard.test.grid.tf/*",
        "https://dashboard.qa.grid.tf/*",
        "https://dashboard.dev.grid.tf/*",
        "http://localhost:8080/*",
        "http://localhost:8081/*",
        "http://localhost:8082/*",
        "http://localhost:3000/*",
        "http://localhost:3001/*"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}
